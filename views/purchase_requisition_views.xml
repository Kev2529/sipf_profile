<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_requisition_form_sipf" model="ir.ui.view">
        <field name="name">purchase.requisition.form.sipf</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
        <field name="arch" type="xml">
            <field name="vendor_id" position="after">
                <field name="department_id" attrs="{'readonly': [('state','not in',('draft'))]}"/>
            </field>
            <xpath expr="//field[@name='account_analytic_id']" position="before">
                <field name="nomenclature_europe_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
