<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="edit_project_sipf" model="ir.ui.view">
        <field name="name">project.project.form.sipf</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <div name="options_active" position="after">
                <div name="purchase_order" attrs="{'invisible': [('is_template','=',True)]}">
                    <div>
                        <label for="purchase_order_id" class="oe_inline" string="Linked Purchase Order :"/>
                        <field name="purchase_order_id" class="oe_inline oe_input_align"/>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
