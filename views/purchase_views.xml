<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_sipf" model="ir.ui.view">
        <field name="name">purchase.order.form.sipf</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="project_id" attrs="{'invisible': [('state','not in',('purchase','done'))]}"/>
                <field name="department_id" attrs="{'readonly': [('state','in',('purchase','done'))]}"/>
            </field>
            <xpath expr="//field[@name='account_analytic_id']" position="before">
                <field name="nomenclature_europe_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
